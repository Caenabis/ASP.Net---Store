@model IEnumerable<CRT.iOrders>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body table-responsive p-0">
                <div style="margin:5px;">
                    <h6>Options :</h6><hr />
                    <a href="/Admin/Create"><button type="button" class="btn btn-success btn-xs">Add Product</button></a>
                </div>
            </div>
    </div>
        </div>
              </div>

                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body table-responsive p-0">
                                <table class="table table-striped table-valign-middle">
                                    <thead>
                                        <tr>
                                            <th>Product</th>
                                            <th>Price</th>
                                            <th>More</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.product_name)
                                                </td>
                                                <td>$ @Html.DisplayFor(modelItem => item.order_price) USD</td>
                                                <td>
                                                <td>
                                                    <a href="/Products/Details/@Html.DisplayFor(modelItem => item.product_id)"><button class="btn btn-primary btn-xs">View Product</button></a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <div style="margin:10px">
                                    @using (Html.BeginForm("ExportData", "Carts", new { }, FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-primary btn-xs">
                                            <i class="fas fa-shopping-cart"></i> Export CSV
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
