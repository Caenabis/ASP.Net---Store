@model IEnumerable<CRT.iCarts>


<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body table-responsive p-0">
                <table class="table table-striped table-valign-middle">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Qua</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@Html.DisplayFor(modelItem => item.product_img)" alt="@Html.DisplayFor(modelItem => item.product_name)" class="img-circle img-size-32 mr-2" style="border-radius:5px; width:10%;">
                                    @Html.DisplayFor(modelItem => item.product_name)
                                </td>

                                <td>$ @Html.DisplayFor(modelItem => item.product_price) USD</td>
                                <td>

                                <td>@Html.DisplayFor(modelItem => item.product_qua)</td>
                                <td>

                                <td>
                                    <a href="/Products/Details/@Html.DisplayFor(modelItem => item.product_id)"><button class="btn btn-primary btn-xs">View Product</button></a>
                                </td>

                                <td>
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                @using (Html.BeginForm("OrderCarts", "Carts", new { }, FormMethod.Post))
                {
                    <button class="btn btn-success btn-xs" style="margin:5px;">Order Now !</button>}
            </div>
        </div>
    </div>
</div>
<!-- /.row -->
