@model IEnumerable<CRT.iProducts>


<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body table-responsive p-0">
                <table class="table table-striped table-valign-middle">
                    <div style="margin:10px">
                        @using (Html.BeginForm("Index", "Search", FormMethod.Get))
                        {
                            <div>
                                <input class="form-control" type="text" name="qSearch" placeholder="Example :" /><br />
                                <input type="submit" value="Search" id="btnSubmit" class="btn btn-success" />
                            </div>}
                    </div>

                    <ht></ht>
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Price</th>
                            <th>More</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@Html.DisplayFor(modelItem => item.Img)" alt="@Html.DisplayFor(modelItem => item.Name)" class="img-circle img-size-32 mr-2" style="border-radius:5px; width:10%;">
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>$ @Html.DisplayFor(modelItem => item.Price) USD</td>
                                <td>
                                <td>
                                    <a href="/Products/Details/@Html.DisplayFor(modelItem => item.Id)"><button class="btn btn-primary btn-xs">View Product</button></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- /.row -->
